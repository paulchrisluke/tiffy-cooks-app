  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run Migration",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["run", "db:generate"],
      "skipFiles": ["<node_internals>/**"],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Format",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["run", "format"],
      "skipFiles": ["<node_internals>/**"],
      "cwd": "${workspaceFolder}"
    }
  ]
}
